CREATE TABLE user_location.trip_info (
	userid		INTEGER,
	trip_id		INTEGER,
	trip_name	TEXT,
	trip_address	TEXT,
	trip_st		TIMESTAMP,	-- trip start time
	trip_et		TIMESTAMP,	-- trip end time
	trip_length	INTEGER,
	trip_preview	BYTEA,
	update_status	SMALLINT,	--(0 = not updated (calculated), 1 = updated to status version 1)
	id		SERIAL		PRIMARY KEY
);

CREATE TABLE user_location.depreciated_location_data
(
  id integer PRIMARY KEY,
  userid integer,
  "timestamp" timestamp without time zone,
  gps geometry,
  server_timestamp timestamp without time zone,
  trip_id integer,
  label integer,
  CONSTRAINT enforce_dims_gps CHECK (st_ndims(gps) = 2),
  CONSTRAINT enforce_geotype_gps CHECK (geometrytype(gps) = 'POINT'::text OR gps IS NULL)
)
WITH (
  OIDS=FALSE
);
ALTER TABLE user_location.depreciated_location_data OWNER TO postgres;
